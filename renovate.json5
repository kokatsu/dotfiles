{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "minimumReleaseAge": "1 day",
  "customManagers": [
    {
      // Pattern: let version = "x.y.z" immediately after Renovate comment
      // Matches: claude-code, secretlint, unocss-language-server, agent-browser, termframe, deck
      "customType": "regex",
      "fileMatch": ["nix/overlays/default\\.nix$"],
      "matchStrings": [
        "#\\s*Renovate:\\s*datasource=(?<datasource>[\\w.-]+)\\s+depName=(?<depName>[\\w@/-]+)\\n\\s+[\\w-]+\\s*=\\s*_final:\\s*prev:\\s*let\\n\\s+version\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "versioningTemplate": "semver"
    },
    {
      // Pattern: rec { pname = "..."; version = "x.y.z" after Renovate comment
      // Matches: ccusage, cssmodules-language-server
      "customType": "regex",
      "fileMatch": ["nix/overlays/default\\.nix$"],
      "matchStrings": [
        "#\\s*Renovate:\\s*datasource=(?<datasource>[\\w.-]+)\\s+depName=(?<depName>[\\w@/-]+)\\n\\s+[\\w-]+\\s*=\\s*_final:\\s*prev:\\s*\\{\\n\\s+[\\w-]+\\s*=\\s*prev\\.[\\w.]+\\s+rec\\s*\\{\\n\\s+pname\\s*=\\s*\"[^\"]+\";\\n\\s+version\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": ["nix/overlays/default.nix"],
      "groupName": "nix overlay packages",
      "semanticCommitType": "build",
      "semanticCommitScope": "deps"
    },
    {
      // GitHub releases often have "v" prefix, strip it for Nix
      "matchDatasources": ["github-releases"],
      "extractVersion": "^v?(?<version>.*)$"
    },
    {
      "matchManagers": ["github-actions"],
      "minimumReleaseAge": "7 days",
      "internalChecksFilter": "strict"
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["digest"],
      "enabled": false
    }
  ]
}
