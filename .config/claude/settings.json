{
  "language": "japanese",
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false,
  "respectGitignore": false,
  "fileSuggestion": {
    "type": "command",
    "command": "~/.config/claude/file-suggestion.sh"
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline",
    "padding": 0
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "[ \"$(uname)\" = \"Darwin\" ] && terminal-notifier -title 'Claude Code' -message 'タスクが完了しました' -sound Glass -activate com.github.wez.wezterm || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "[ \"$(uname)\" = \"Darwin\" ] && terminal-notifier -title 'Claude Code' -message '権限の承認が必要です' -sound Glass -activate com.github.wez.wezterm || true"
          }
        ]
      }
    ]
  }
}
